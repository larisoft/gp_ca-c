<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_height="match_parent">
  
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dip"
        android:id="@+id/container"
        android:layout_height="match_parent">
          
    <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/secondPanel"
       android:paddingBottom="10dip"
       android:layout_alignParentTop="true"
       android:orientation="horizontal">
       
        <TextView
            android:text="overall:"
            android:textColor="@color/realblack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="3dip"
            android:textSize="12sp"/>
        
       <TextView
           android:id="@+id/overallGP"
           android:entries="@array/Tunitload"   
            android:paddingRight="15dip"
             android:textColor="@color/realblack"
            android:text="0.00"
           android:textSize="30sp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
       
       
        <TextView
            android:text="Semester:"
             android:textColor="@color/realblack"
             android:padding="7dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"/>
        
       <TextView
           android:id="@+id/jSemester"
            android:textColor="@color/realblack"
           android:layout_width="fill_parent" 
           android:textSize="20sp" 
           android:layout_height="wrap_content"
           android:text="0.00"/>

</LinearLayout>
  
    
    
    <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content" 
       android:layout_below="@+id/secondPanel"
        android:paddingBottom="20dp"
        android:paddingTop="10dp"
       android:id="@+id/labels"
       android:orientation="horizontal">
       
       
       <TextView
           android:textColor="@color/realblack"
           android:layout_width="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_height="wrap_content"
           android:text="Courses:"/>
       
       
         <TextView
             android:textColor="@color/realblack"
           android:layout_width="wrap_content"
             android:layout_centerHorizontal="true"
           android:layout_height="wrap_content"
           android:text="UnitLoads:"/>
        
       
       <TextView
              android:textColor="@color/realblack"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:text="Grades:"/>

</RelativeLayout>
  

       <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/rowsw"
           android:layout_below="@+id/labels"
           android:layout_centerInParent="true"
           android:paddingTop="10dp"
        android:orientation="horizontal">


</LinearLayout>


                              <TextView android:id="@+id/wcalculate"
                                  android:padding="10dp"
                                  android:text="Change your grades and see the impact they would have had on your GP"
                                  android:layout_alignParentBottom="true"
                                  android:layout_width="match_parent"
                                  android:layout_below="@+id/rowsw"
                                  android:layout_height="wrap_content"/>
    </RelativeLayout>
    
     
    
    
</ScrollView>
