<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="50dip"
    tools:context="com.example.mygp.Settings"
    tools:ignore="MergeRootFrame">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change Password for Cumulative GP"
        android:textAlignment="center"
        android:padding="20dip"
        android:textColor="@color/realblack" />
    
    <EditText
        android:id="@+id/firstPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:hint="Old password"/>
    
    
    <EditText
        android:id="@+id/secondPassword"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="new Password"/>
    

    <EditText
        android:id="@+id/secondPassword2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:hint="Confirm Password"/>
    <Button
        android:id="@+id/savePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"/>
    
    
    
    </LinearLayout>

