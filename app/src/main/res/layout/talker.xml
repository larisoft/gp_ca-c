<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:padding="20dip" 
    android:background="@color/white">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dip"
        android:layout_height="wrap_content">
    
    <TextView 
        android:text="GP:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/GP"
        android:textColor="@color/realblack"
        android:layout_centerHorizontal="true"
        android:textSize="70sp"/>
    
     
    <TextView
        android:id="@+id/detail"
        android:paddingTop="20dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/GP"
        android:maxLines="40"
        android:padding="20dip"
        android:textColor="@color/realblack"
 		android:text="The details of this app will be revealed here"/>
    
    <Button
        android:id="@+id/saveToCumulative"
        android:layout_width="match_parent"
        android:padding="20dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail"
        android:text="Add to Cumulative"/>
    
       <Button
        android:id="@+id/sendGP"
        android:layout_below="@+id/saveToCumulative"
        android:layout_width="match_parent"
        android:padding="20dip"
        android:layout_height="wrap_content" 
        android:text="Send"/>
     
       <Button
        android:id="@+id/exit"
        android:layout_below="@+id/sendGP"
        android:layout_width="match_parent"
        android:padding="20dip"
        android:layout_height="wrap_content" 
        android:text=" Exit "/>
    
    
    </RelativeLayout>
</ScrollView>
